<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Senhas</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
    
</style>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de senhas</h1>
        <div class="mb-3">
            <a href="/senha/form" class="btn btn-primary">Guardar nova senha</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Valor</th>
                </tr>
            </thead>
            <tbody>
                <% if (senhas.length > 0) { %>
                    <% senhas.forEach(senha => { %>
                        <tr>
                            <td><%= senha.id %></td>
                            <td><%= senha.nome %></td>
                            <td><%= senha.valor %></td>
                            <td>
                                <form action="/senha/delete/<%= senha.id %>" method="POST">
                                    <button type="submit" class="btn btn-primary">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <%} else {%>
                <tr>
                    <td colspan="4">Nenhuma senha cadastrada</td>
                </tr>
                <% } %>
            </tbody>            
        </table>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>